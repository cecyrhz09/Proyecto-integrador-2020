        <li><a href="/EstadoServicio">Estado de mi servicio</a></li>
        <li><a href="/misServicios">Mis servicios</a></li>
    </ul>

    <main>
        <!--FORMULARIO DE SERVICIO NUEVO-->
        <div class="section container white">
            <div class="row card">
                <form action="">
                    <div class="row ">
                        <h3 style="text-align: center;">Registra aquí tu servicio</h3>
                    </div>
                    <div class="row ">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">account_circle</i>
                            <label for="cliente">Cliente</label>
                            <input type="text" id="cliente">
                        </div>
                        <div class="input-field col s6">
                            <i class="material-icons prefix">call</i>
                            <label for="telefono">Teléfono</label>
                            <input type="text" id="telefono">
                        </div>
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">add_location</i>
                        <label for="negocio">Negocio</label>
                        <input type="text" id="negocio">
                    </div>
                    <!-- <div class="clearfix"></div> -->
                    <div class="input-field col s6">
                        <i class="material-icons prefix">location_on</i>
                        <select>
                            <option value="" disabled selected>Seleccione su destino</option>
                            <option value="">Allende #34</option>
                        </select>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">local_mall</i>
                        <label for="especificacion">Especifique su pedido</label>
                        <input type="text" id="especificacion">
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">access_alarm</i>
                        <label for="hora">Hora de pedido</label>
                        <input type="text" id="pago">
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">monetization_on</i>
                        <label for="pago">Monto a pagar</label>
                        <input type="text" id="pago">
                    </div>
                    <div class="input-field col s3">
                        <button class="btn red">
                            <i class="material-icons left">delete</i>
                            Cancelar
                        </button>
                    </div>
                    <div class="input-field col s4 right">
                        <button class="btn">
                            <i class="material-icons left">check_circle</i>
                            Realizar Compra
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="page-footer black">

        <div class="social-container">
            <a href="#"><i class="fab fa-facebook-square"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
